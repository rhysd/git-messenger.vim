                    Assert True(LicenseDiffExists(), lines)
                    Assert True(ReadmeDiffExists(), lines)

                    normal d

                    let removed = WaitWhile(ReadmeDiffExists)
                    let lines = 'Got lines: ' . string(getline(1, '$'))
